{% extends 'base.html.twig' %}

{% block title %}Guessmots Game{% endblock %}

{% block body %}
    <h1>Guessmots Game</h1>

    {# Display buttons with values corresponding to word IDs #}
    {% for id in 1..5 %}
        <form method="post" action="{{ path('app_jeu_accueil', {'id': id}) }}">
            <button type="submit" name="buttonId" value="{{ id }}">Word {{ id }}</button>
        </form>
    {% endfor %}

    {# Display the word fetched from the database #}
    {% if word %}
        <h2>Word: {{ word.mot }}</h2>
        <p>Points: {{ word.points }}</p>
    {% endif %}
{% endblock %}
