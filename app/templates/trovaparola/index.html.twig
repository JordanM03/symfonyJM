    </nav>
    
<h1 class="text-warning">Jeu JM: Trouve le mot!</h1><br>
<h3 class="text-danger">Choisir le jour</h3>

    {% for word in words %}
        <form style="align: center" method="get" action="{{ path('show_word', {'id': word.id}) }}">
            <button class="btn btn-primary btn-lg" type="submit" name="buttonId" value="{{ word.id }}">Jour {{ word.id }}</button>
        </form><br>
    {% endfor %}

{% endblock %}