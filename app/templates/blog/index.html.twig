{% extends 'base.html.twig' %}

{% block body %}
    <ul>
        {% for article in articles %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.content }}</p>
                    <a href="#" class="btn btn-primary">Voir plus</a>
                </div>
            </div>
        {% endfor %}
    </ul>
{% endblock %}