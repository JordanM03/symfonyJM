{% extends 'base.html.twig' %}
{% block body %}
    <nav class="navbar navbar-expand-lg bg-primary shadow p-3 mb-5 rounded">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">JeuJM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('trovaparola_page') }}">Mes mots</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Scores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('classement_page') }}">Classement</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('likes_page') }}">Le Top des Mots</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('notesmots') }}">Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('reglages_user') }}">Mon compte</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br><br>
    <h2>Bienvenue {{ username }}</h2>

    {% if app.session.get('utilisateurId') is defined %}
        {% if username is defined %}
            {% if score is defined %}

                <div class="card text-center bg-warning">
                    <div class="card-header">
                        Mes stats utilisateurs
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ score }}</h5>
                        <p class="card-text">points à mon score!</p>
                        <a href="{{ path('trovaparola_page') }}" class="btn btn-primary">Jouer maintenant</a>
                    </div>
                    <div class="card-footer text-body-secondary">
                        {{ username }}

                        <form method="post" action="{{ path('delete_account') }}">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Voulez-vous vraiment éliminer votre compte?')">Eliminer mon profil</button>
                        </form>
                        <br>

                        <form method="post" action="{{ path('update_account') }}">
                            <label for="nouveauUsername">Nouveau Username:</label>
                            <input type="text" id="nouveauUsername" name="nouveauUsername" required>
                            
                            <label for="nouveauMdp">Nouveau Password:</label>
                            <input type="password" id="nouveauMotdepasse" name="nouveauMotdepasse" required>

                            <button type="submit" class="btn btn-primary">Modifier données</button>
                        </form>

                    </div>
                </div>
            {% endif %}
        {% endif %}
    {% endif %}






    
    
    
    

{% endblock %}